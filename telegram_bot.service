[Unit]
Description=Run the CoMakingSpace Telegram Bot
After=network-online.target

[Service]
ExecStart=/usr/bin/python3 -u /home/pi/CommonRoomPiSettings/SpaceAutomation/TelegramBot/coMakingBot.py
WorkingDirectory=/home/pi/CommonRoomPiSettings/SpaceAutomation/TelegramBot
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target